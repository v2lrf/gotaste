<p><%= I18n.t('devise_mailer.email_changed.headline', first_name: @resource.first_name) %></p>

<% if @resource.try(:unconfirmed_email?) %>
  <p><%= I18n.t('devise_mailer.email_changed.body', email: @resource.unconfirmed_email) %></p>
<% else %>
  <p><%= I18n.t('devise_mailer.email_changed.body', email: @resource.email) %></p>
<% end %>

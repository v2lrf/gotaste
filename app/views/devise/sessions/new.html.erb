<div class="mx-auto mt-12 max-w-sm">
  <h2 class="text-center mb-4 text-red-light">Log ind</h2>
  <div class="bg-white shadow px-4 py-6 rounded mb-6">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do | f | %>
      <div class="mb-4">
        <%= f.label :email, class: 'block text-red-darkest text-sm font-bold mb-1' %>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'E-mail', class: 'border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline' %>
      </div>
      <div class="mb-4">
        <%= f.label :password, class: 'block text-red-darkest text-sm font-bold mb-1' %>
        <%= f.password_field :password, autocomplete: 'current-password', placeholder: '****************', class: 'border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline' %>
      </div>
      <div class="mb-4 flex items-center ">
        <%= f.label :remember_me do %>
          <%= f.check_box :remember_me, class: 'mr-2' %>
          <span class="text-sm text-grey-darker">
            Husk mit login
          </span>
        <% end %>
      </div>
      <div class="mb-4">
        <%= f.submit 'Log in', class: 'px-6 h-10 w-full rounded shadow tracking-wide bg-red-light text-white border border-red-light hover:bg-red-dark hover:border-red-dark' %>
      </div>
      <%= link_to 'Har du glemt din adgangskode?', new_password_path(resource_name), class: 'block text-center text-grey-darker text-sm' %>
    <% end %>
  </div>
</div>
